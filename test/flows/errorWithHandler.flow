start.type = begin
start.action {
    this.emit('next');
}
start.next -> exception
exception.action {
    // emits an error on the currentState and stays there
    //console.log('throw error');
    throw new Error('error in flow');
}

exception.error -> noHandler


noHandler.action {
    throw new Error('error no handler');
}

noHandler.'extern.next' -> end

end.type = end
end -> end